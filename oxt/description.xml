<?xml version="1.0" encoding="UTF-8"?>
<description xmlns="http://openoffice.org/extensions/description/2006"
    xmlns:d="http://openoffice.org/extensions/description/2006"
    xmlns:lo="http://libreoffice.org/extensions/description/2011"
    xmlns:xlink="http://www.w3.org/1999/xlink">

    <!-- Unique identifier -->
    <identifier value="com.aras.librecalc.ai"/>

    <!-- Version -->
    <version value="1.0.0"/>

    <!-- Platform -->
    <platform value="all"/>

    <!-- Display name in multiple languages -->
    <display-name>
        <name lang="en">LibreCalc AI Assistant</name>
        <name lang="tr">LibreCalc AI Asistan</name>
    </display-name>

    <!-- Publisher information -->
    <publisher>
        <name xlink:href="https://github.com/palamut62" lang="en">palamut62</name>
        <name xlink:href="https://github.com/palamut62" lang="tr">palamut62</name>
    </publisher>

    <!-- Extension description -->
    <extension-description>
        <src xlink:href="description/description_en.txt" lang="en"/>
        <src xlink:href="description/description_tr.txt" lang="tr"/>
    </extension-description>

    <!-- Registration / License -->
    <registration>
        <simple-license accept-by="admin" suppress-on-update="true">
            <license-text xlink:href="description/license_en.txt" lang="en"/>
        </simple-license>
    </registration>

    <!-- Icon -->
    <icon>
        <default xlink:href="icons/calcai_42.svg"/>
        <high-contrast xlink:href="icons/calcai_42.svg"/>
    </icon>

    <!-- Dependencies - LibreOffice 6.0+ -->
    <dependencies>
        <lo:LibreOffice-minimal-version value="6.0" d:name="LibreOffice 6.0"/>
    </dependencies>

    <!-- Update information -->
    <update-information>
        <src xlink:href="https://raw.githubusercontent.com/palamut62/libre_calc_ai_addon/main/oxt/update.xml"/>
    </update-information>

</description>
